datasource db {
    provider = "sqlite"
    url      = "file:../dev.db"
}

generator client {
    provider = "prisma-client"
    output   = "client"
    runtime  = "deno"
}

model user {
    id       String @id @default(uuid())
    text     String @unique
    email    String @unique
    password String
    post     post[]
}

model post {
    id      String @id @default(uuid())
    title   String
    content String
    user    user   @relation(fields: [userId], references: [id])
    userId  String
}
